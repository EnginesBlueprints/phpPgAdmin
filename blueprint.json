    "system_packages": [
      {
        "package": "php-pgsql"
      }
    ],
    "installed_packages": [
      {
        "name": "phpPgAdmin-5.1.tar.bz2",
        "source_url": "http://downloads.sourceforge.net/project/phppgadmin/phpPgAdmin%20%5Bstable%5D/phpPgAdmin-5.1/phpPgAdmin-5.1.tar.bz2",
        "destination": "./",
        "extraction_command": "tar -xpf",
        "path_to_extracted": "phpPgAdmin-5.1"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "database/sql/pgsql",
        "variables": {
          "collation": "en_GB",
          "encoding": "utf8",
          "dbpassword": "_Engines_System(random(10))",
